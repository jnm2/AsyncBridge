<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net40;net35;net20</TargetFrameworks>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="NUnit" Version="3.10.1" />
      <ProjectReference Include="..\..\..\src\AsyncBridge\AsyncBridge.csproj" />
    </ItemGroup>

    <Target Name="SetNUnitAlias" BeforeTargets="FindReferenceAssembliesForReferences;ResolveReferences">
        <ItemGroup>
            <ReferencePath Condition="'%(FileName)' == 'NUnit.Framework' or '%(FileName)' == 'NUnit.System.Linq'">
                <Aliases>NUnit</Aliases>
            </ReferencePath>
        </ItemGroup>
    </Target>

</Project>
